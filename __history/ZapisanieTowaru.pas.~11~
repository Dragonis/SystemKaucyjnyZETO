unit ZapisanieTowaru;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Imaging.jpeg, Vcl.ExtCtrls,
  Vcl.StdCtrls
  ;

type
  TZapisanieTowaruForm = class(TForm)
    Label1: TLabel;
    Button1: TButton;
    Button2: TButton;
    Image1: TImage;
    procedure Button2Click(Sender: TObject);
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  ZapisanieTowaruForm: TZapisanieTowaruForm;

implementation

{$R *.dfm}

uses SzczeegolyProduktuUnit;

procedure TZapisanieTowaruForm.Button1Click(Sender: TObject);
begin
  // najpierw ProduktForm
  if Assigned(SzczeegolyProduktuUnit.ProduktForm) then
  begin
    // tymczasowo ignorujemy FormCloseQuery
    SzczeegolyProduktuUnit.ProduktForm.OnCloseQuery := nil;
    SzczeegolyProduktuUnit.ProduktForm.Close;
    SzczeegolyProduktuUnit.ProduktForm := nil;
  end;

  // teraz zamykamy bie¿¹cy formularz
  OnCloseQuery := nil; // ignorujemy walidacjê w tym formularzu
  Close;
end;

procedure TZapisanieTowaruForm.Button2Click(Sender: TObject);
begin
Close;
end;

end.
